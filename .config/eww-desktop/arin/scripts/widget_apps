#!/bin/bash

if [[ "$1" == "--tr" ]]; then
	alacritty --working-directory ~ &

elif [[ "$1" == "--ff" ]]; then
	google-chrome-stable &

elif [[ "$1" == "--fm" ]]; then
	thunar ~ &

elif [[ "$1" == "--ge" ]]; then
	geany &

elif [[ "$1" == "--dc" ]]; then
	discord &

elif [[ "$1" == "--tg" ]]; then
	telegram-desktop &

elif [[ "$1" == "--rd" ]]; then
	google-chrome-stable --new-tab "https://reddit.com"

elif [[ "$1" == "--ml" ]]; then
	google-chrome-stable --new-tab "https://mail.google.com"

elif [[ "$1" == "--pow" ]]; then
	xfce4-power-manager-settings &

elif [[ "$1" == "--nm" ]]; then
	alacritty -e nmtui

fi
