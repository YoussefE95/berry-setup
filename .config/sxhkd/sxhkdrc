#
# bspwm hotkeys
#
# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# resize window
super + alt + h
    /bin/sh $HOME/.config/bspwm/scripts/resize/shrinkx.sh
super + alt + l
    /bin/sh $HOME/.config/bspwm/scripts/resize/expandx.sh
super + alt + k
    /bin/sh $HOME/.config/bspwm/scripts/resize/shrinky.sh
super + alt + j
    /bin/sh $HOME/.config/bspwm/scripts/resize/expandy.sh

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# set the window state
super + {t,shift + t,f}
	bspc node -t {tiled,pseudo_tiled,floating}

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# Special hotkeys
#

# eww sidebar
super + @space
    $HOME/.config/eww/arin/desktop/sidebar/toggle_sidebar

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
	rofi -modi drun -show drun -line-padding 4 \
        -columns 2 -padding 50 -hide-scrollbar -terminal xfce4-terminal \
        -show-icons -drun-icon-theme "Arc-X-D" -font "MesloLGS NF 11"

# Multimedia keys
XF86AudioRaiseVolume
    amixer -q set Master 5%+ unmute

# Still multimedia
XF86AudioLowerVolume
    amixer -q set Master 5%- unmute

# still
XF86AudioMute
    amixer -D pulse sset Master toggle-mute

XF86AudioPlay
    playerctl play-pause

XF86AudioPrev
    playerctl previous

XF86AudioNext
    playerctl next

# Brightness up
XF86MonBrightnessUp
    xbacklight -inc 5

# brightness down
XF86MonBrightnessDown
    xbacklight -dec 5

# Screenshot
Print
    ~/.config/bspwm/scripts/screenshot.sh

# lock
super + Escape
    ~/.config/bspwm/scripts/i3lock-fancy/i3lock-fancy.sh

# Internet
super + w 
    google-chrome-stable --new-tab ""

# Files
super + n 
    thunar
