#!/bin/bash

icon='ÔêÄ'
text=$(brightnessctl | grep 'Current brightness:' | cut -d ' ' -f 4 | tr -d '()%')

if [[ $1 == '--icon' ]]; then
    echo $icon
elif [[ $1 == '--text' ]]; then
    echo $text
elif [[ $1 == '--up' ]]; then
    brightnessctl -q set 5%+
elif [[ $1 == '--down' ]]; then
    brightnessctl -q set 5%-

fi
