(defwindow bar
    :monitor 0
    :geometry (geometry
        :x "0" :y "0"
        :anchor "top center"
    )
    :stacking "fg"
    :reserve (struts 
        :distance "40px"
        :side "top"
    )
    :windowtype "dock"
    :wm-ignore false
    (box
        :class "bar"
        (systray
            :spacing "1"
            :orientation "h"
            :space-evenly true
            :icon-size "18"
            :prepend-new true
        )
    )
)
